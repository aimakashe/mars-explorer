{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "env": {
    "browser": true,
    "es2020": true
  },
  "rules": {
    "semi": ["error", "always"],
    "no-console": "error",
    "no-unused-vars": "off",  // Отключаем для TypeScript
    "@typescript-eslint/no-unused-vars": [  // Включаем TypeScript версию
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-var": "error",
    "no-undef": "error"
  }
}